  <div>
    <h1> Inspection Report</h1>
      <div><h3><%= @inspection.account.name %>: ACCT# <%=@inspection.account.acct_num%></h3>
      <table>
        <tr>
          <td><%= button_to "EDIT ACCT #{@inspection.account.acct_num}", edit_account_path(@inspection.account), method: "get", class: "button" %><td>
          <td><%= button_to "EDIT INSPECTION", edit_inspection_path(@inspection), method: "get", class: "button" %></td>
          <td><%= button_to "DELETE INSPECTION", @inspection, method: "delete", class: "button" %></td>
          <td><%= button_to "BACK TO ACCT", @inspection.account, method: "get", class: "button" %></td>
        </tr>
      </table>
  </div><br><br>


  <div class="row">
    <div class="col-md-6" style="margin-left:25%;padding:0">
        <table class="table" style="margin:0;padding:0">
          <thead class="thead-dark">
            <tr align="center">
              <th scope="col">Model</th>
              <th scope="col">Registration Num:</th>
              <th scope="col">System Type</th>
              <th scope="col">Account NUM:</th>
              <th scope="col">Inspection Date</th>
            </tr>
          </thead>
          <tbody>
            <tr align="center">
              <td><%= @inspection.model %></td>
              <td><%= @inspection.reg_num %></td>
              <td><%= @inspection.system.system_type %> </td>
              <td><%= @inspection.account.acct_num %></td>
              <td><%= @inspection.created_at %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
      <div class="row">
        <div class="col-md-6" style="margin-left:25%;padding:0">
            <table class="table" style="margin:0;padding:0">
              <thead class="thead-dark">
                <tr align="center">
                  <th scope="col">Drift Eliminatior Condition</th>
                  <th scope="col">Basin Condition</th>
                  <th scope="col">Tower Condition:</th>
                  <th scope="col">Treatment</th>
                </tr>
              </thead>
              <tbody>
                <tr align="center">
                  <td><%= @inspection.system.treatment_comment %> </td>
                  <td><%= @inspection.fill_condition %></td>
                  <td><%= @inspection.basin_condition %></td>
                  <td><%= @inspection.tower_condition %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
