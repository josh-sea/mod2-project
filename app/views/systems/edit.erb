<div class="jumbotron" style="max-width:50%;margin-left:25%">
<h1 align="center">Edit <%= @system.system_type %> for account: <%= Account.find(@system.account_id).name %></h1>
<div><% if @errors   %>
<ul><% @errors.each do |error| %>
<li><%= error %></li>
<% end %>
</ul>
<% end %>
</div>
<table align="center">
  <tr>
    <td align="center">
<%= form_for @system do |f| %>
<%= f.label :system_type %><br>
<%= f.text_field :system_type %><br><br>
<%= f.label :treatment_comment %><br>
<%= f.text_area :treatment_comment %><br><br>
<%= f.label :seasonal %>
<%= f.check_box :seasonal %><br><br>
<%= collection_select(:system, :account_id, Account.all, :id, :name) %><br><br>
    </td>
  </tr>
  <tr>
    <td align="center">
      <div class="btn-group">
      <%= f.submit(class: "button") %>
        <% end %>
      <%= button_to "Delete", system_path(@system), method: "delete", class: "button" %>
      <%= button_to "ACCT", @system.account, method: "get", class: "button" %>
      <%= button_to "REP ACCT", @system.account.rep, method: "get", class: "button" %>
      </div>
    </td>
  </tr>
  <tr>
    <td>

    </td>
  </tr>
</table>
</div>
