<h1>EDIT <%= @test.name %> TEST</h1>
<div><% if @errors   %>
<ul><% @errors.each do |error| %>
<li><%= error %></li>
<% end %>
</ul>
<% end %>
</div>

<%= form_for @test do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name %><br><br>
<%= f.label :reading %><br>
<%= f.number_field :reading %><br><br>
<%= f.label :comment %><br>
<%= f.text_area :comment %><br>
<%= f.submit(class: "button") %>
<% end %>
<hr style="width:50%">
<%= button_to "Delete", test_path(@test), method: "delete", class: "button" %>
